{
  "variables": {
    "modpack_id": null,
    "modpack_version": null
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-2",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-focal-20.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "ftb_university_{{user `modpack_id`}}_{{user `modpack_version`}}_{{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["sleep 30"]
    },
    {
      "type": "shell",
      "script": "./install_minecraft.sh",
      "environment_vars": [
        "MODPACK_ID={{user `modpack_id`}}",
        "MODPACK_VERSION={{user `modpack_version`}}"
      ]
    },
    {
      "type": "file",
      "source": "./minecraft.service",
      "destination": "/home/ubuntu/minecraft.service"
    },
    {
      "type": "shell",
      "script": "./enable_minecraft_service.sh"
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "image.manifest.json"
    }
  ]
}
